{
  // See https://go.microsoft.com/fwlink/?LinkId=733558
  // for the documentation about the tasks.json format
  "version": "2.0.0",
  "tasks": [
    {
      "label": "mbed Compile",
      "type": "shell",
      "command": "mbed",
      "args": [
        "compile"
      ],
      "group": "none"
    },
    {
      "label": "Flash",
      "type": "shell",
      "command": "JLink.exe",
      "args": [
        "-device",
        "STM32L476RG",
        "-if",
        "SWD",
        "-speed",
        "4000",
        "-autoconnect",
        "1",
        "-CommanderScript",
        "flash.jlink"
      ],
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "SWOView",
      "type": "shell",
      "command": "JLinkSWOViewerCL.exe",
      "args": [
        "-device",
        "STM32L476RG",
        "-cpufreq",
        "80000000",
        "-swofreq",
        "4000000"
      ],
      "group": "none",
      "problemMatcher": []
    },
    {
      "label": "Build, & Flash",
      "type": "shell",
      "command": "JLink.exe",
      "args": [
        "-device",
        "STM32L476RG",
        "-if",
        "SWD",
        "-speed",
        "4000",
        "-autoconnect",
        "1",
        "-CommanderScript",
        "flash.jlink"
      ],
      "group": "none",
      "dependsOn": [
        "mbed Compile"
      ]
    },
    {
      "label": "Build, Flash, & SWOView",
      "type": "shell",
      "command": "JLinkSWOViewerCL.exe",
      "args": [
        "-device",
        "STM32L476RG",
        "-cpufreq",
        "80000000",
        "-swofreq",
        "4000000"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": [
        "Build, & Flash"
      ]
    },
  ]
}